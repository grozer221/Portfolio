@model IEnumerable<ProjectModel>

@{
    ViewData["Title"] = "Projects(AdminPanel)";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create">
        <button class="btn btn-dark">Create New</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SiteLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesktopAppLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AndroidAppLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IOSAppLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesktopAppLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AndroidAppLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IOSAppLink)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <button class="btn btn-dark">Edit</button>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <button class="btn btn-outline-dark">Details</button>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <button class="btn btn-danger">Delete</button>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
