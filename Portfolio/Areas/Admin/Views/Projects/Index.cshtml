@model ProjectsIndexViewModel

@{
    ViewData["Title"] = "Projects(AdminPanel)";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create">
        <button class="btn btn-dark">Create New</button>
    </a>
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].Name)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].SiteLink)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].Technologies)</th>
        <th>Actions</th>
    </tr>
    @foreach (var project in Model.Projects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => project.Name)
            </td>
            <td>
                <div>
                    <span>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].SiteLink): </span>
                    <span>@Html.DisplayFor(modelItem => project.SiteLink)</span>
                </div>
                <div>
                    <span>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].DesktopAppLink): </span>
                    <span>@Html.DisplayFor(modelItem => project.DesktopAppLink)</span>
                </div>
                <div>
                    <span>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].AndroidAppLink): </span>
                    <span>@Html.DisplayFor(modelItem => project.AndroidAppLink)</span>
                </div>
                <div>
                    <span>@Html.DisplayNameFor(modelItem => modelItem.Projects[0].IOSAppLink): </span>
                    <span>@Html.DisplayFor(modelItem => project.IOSAppLink)</span>
                </div>
            </td>
            <td>
                @if (project.Technologies != null && project.Technologies.Count > 0)
                {
                    <ul>

                        @foreach (var technology in project.Technologies)
                        {
                            <li>@technology.Name</li>
                        }
                    </ul>
                }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@project.Id">
                    <button class="btn btn-dark">Edit</button>
                </a>
                <a asp-action="Details" asp-route-id="@project.Id">
                    <button class="btn btn-outline-dark">Details</button>
                </a>
                <a asp-action="Delete" asp-route-id="@project.Id">
                    <button class="btn btn-danger">Delete</button>
                </a>
            </td>
        </tr>
    }
</table>

<partial name="_Pagination" model="Model.Page" />
