@model ProjectModel

@{
    ViewData["Title"] = $"Edit {Model.Name}(AdminPanel)";
}

<h1>Edit @Model.Name</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageURL" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label"></label>
                <input asp-for="ImageUpload" class="form-control" />
                <div id="wrapperImagePreview">
                    <img id="imagePreview" alt="Project image" src=@("/media/projects/" + Model.ImageURL) />
                </div> 
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteLink" class="control-label"></label>
                <input asp-for="SiteLink" class="form-control" />
                <span asp-validation-for="SiteLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesktopAppLink" class="control-label"></label>
                <input asp-for="DesktopAppLink" class="form-control" />
                <span asp-validation-for="DesktopAppLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AndroidAppLink" class="control-label"></label>
                <input asp-for="AndroidAppLink" class="form-control" />
                <span asp-validation-for="AndroidAppLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IOSAppLink" class="control-label"></label>
                <input asp-for="IOSAppLink" class="form-control" />
                <span asp-validation-for="IOSAppLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technologies" class="control-label"></label>
                <select asp-for="TechnologiesIds" asp-items="ViewBag.Technologies" class="form-control"></select>
                <span asp-validation-for="Technologies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        CKEDITOR.replace("Description");
    </script>
}


