@model ProjectModel

@{
        ViewData["Title"] = $"Details {Model.Name}(AdminPanel)";
}

<h1>Details  @Model.Name</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SiteLink)
        </dt>
        <dd class="col-sm-10">
            @Model.SiteLink
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DesktopAppLink)
        </dt>
        <dd class="col-sm-10">
            @Model.DesktopAppLink
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AndroidAppLink)
        </dt>
        <dd class="col-sm-10">
            @Model.AndroidAppLink
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IOSAppLink)
        </dt>
        <dd class="col-sm-10">
            @Model.IOSAppLink
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">
        <button class="btn btn-outline-dark">Edit</button>
    </a>
    <a asp-action="Index">
        <button class="btn btn-dark">Back to List</button>
    </a>
</div>
